{% extends 'base.html.twig' %}

{% block title %}Hello ClasseController!{% endblock %}

{% block body %}
<div class="container">
        <div class="buttonContainer">
            <buttontype="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addProfesseur">Ajouter professeur</button>
        </div>
        <table id="listOfProfesseur" cellspacing="0" class="table table-bordered table-striped grid" style="width:100%">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>Prenom</th>
                    <th>Date naissance</th>
                    <th>Email</th>
                    <th>Telephone</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
            
            </tbody>
            <tfoot>
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>Prenom</th>
                    <th>Date naissance</th>
                    <th>Email</th>
                    <th>Telephone</th>
                    <th>Action</th>
                </tr>
            </tfoot>
        </table>
</div>
<div class="overlayOuvrage" >

</div>
<div class="popOuvrage">
    <div class="loadingScreen"><i class="fas fa-spinner fa-spin"></i></div>
    <i class="fa fa-times xOuvrage"></i>
    <div class="contentProfesseur">
        <div class="form-group">
            <ul>
                <li>
                    <p>Nom: <span>...</span></p>
                </li>
                <li>
                    <p>Prenom: <span>...</span></p>
                </li>
            </ul>
            <label class="col-md-3 control-label required" for="appbundle_theme_discipline" style="font-weight: bold">Classe</label>
            <div class="col-md-9 chooseClass">
                <select id="selectEtablissement"  class="form-control input-sm ">
                    <div style="height: 200px; overflow-y: scroll ">
                    <option>Choisir un classe</option>
                    
                    </div>
                </select>
                <button type="button" class="btn btn-secondary addProfesseurClasse">ajouter</button>
            </div>
        </div>
        <table style="margin-top: 2rem;" class="table table-bordered">
        <thead>
            <tr>
            <th scope="col" style="background-color: #333; color: white;">Order</th>
            <th scope="col" style="background-color: #333;color: white;">Designation</th>
            <th scope="col" style="background-color: #333;color: white;">Action</th>
            </tr>
        </thead>
        <tbody id="tbodyAffectation">
            
        </tbody>
        </table>
    </div>
</div>

<!-- Modal Add Professeur -->
<div class="modal fade" id="addProfesseur" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Ajouter professeur</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <form id="addProfesseurForm">
                <div class="mb-3">
                  <label for="nom" class="form-label">Nom</label>
                  <input type="text" name="nom" class="form-control" id="nom" aria-describedby="nom">
                </div>
                <div class="mb-3">
                  <label for="prenom" class="form-label">Prenom</label>
                  <input type="text" name="prenom" class="form-control" id="prenom">
                </div>
                <div class="mb-3">
                    <label for="dateNaissance" class="form-label">Date naissance</label>
                    <input type="date" name="dateNaissance" class="form-control" id="dateNaissance">
                </div>
                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Email address</label>
                    <input type="email" class="form-control" name="email" id="exampleInputEmail1" aria-describedby="emailHelp">
                </div>
                <div class="mb-3">
                    <label for="tel" class="form-label">Telephone</label>
                    <input type="text" name="tel" class="form-control" id="tel">
                </div>
                
                <button type="submit" class="btn btn-primary" style="font-size: 1.4rem;">Submit</button>
              </form>
        </div>
        <!-- <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary">Save changes</button>
        </div> -->
      </div>
    </div>
  </div>
{% endblock %}