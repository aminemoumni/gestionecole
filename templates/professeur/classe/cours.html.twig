{% extends 'base.html.twig' %}

{% block title %}Hello ClasseController!{% endblock %}

{% block body %}

  <div class="container">
        <div class="row">
            <div class="col-md-3">
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addCourse"> Ajouter Cours</button>
            </div>
        </div>
        <table id="professeur_listOfCours" cellspacing="0" class="table table-bordered table-striped grid" style="width:100%">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Classe</th>
                    <th>Matiere</th>
                    <th>Date Cours</th>
                    <th>Heure Debut</th>
                    <th>Heure fin</th>
                    <th>Designation</th>
                </tr>
            </thead>
            <tbody>
            
            </tbody>
            <tfoot>
                <tr>
                    <th>#</th>
                    <th>Classe</th>
                    <th>Matiere</th>
                    <th>Date Cours</th>
                    <th>Heure Debut</th>
                    <th>Heure fin</th>
                    <th>Designation</th>
                </tr>
            </tfoot>
        </table>
    </div>
    <!-- Modal Add Courses -->
<div class="modal fade" id="addCourse" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Ajouter Cours</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <form id="addCourseForm">
                <div class="mb-3">
                  <label for="matiere" class="form-label">Matiere</label>
                  <select name="matiere" class="form-control" id="matiere">
                      {% for matiere in app.user.professeur.matiere %}
                        <option value="{{matiere.id}}">{{matiere.designation}}</option>
                      {% endfor %}
                  </select>
                </div>
                <div class="mb-3">
                  <label for="dateCourse" class="form-label">Date Cours</label>
                  <input type="date" name="dateCourse" class="form-control" id="dateCourse">
                </div>
                <div class="mb-3">
                    <label for="heureD" class="form-label">Heure Debut</label>
                    <input type="time" name="heureD" class="form-control" id="heureD">
                </div>
                <div class="mb-3">
                    <label for="heureF" class="form-label">Heure Fin</label>
                    <input type="time" class="form-control" name="heureF" id="heureF" >
                </div>
                <div class="mb-3">
                    <label for="designation" class="form-label">Designation</label>
                    <input type="text" name="designation" class="form-control" id="designation">
                </div>
                
                <button type="submit" class="btn btn-primary" style="font-size: 1.4rem;">Submit</button>
              </form>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
